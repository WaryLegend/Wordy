<!-- rounded_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hiệu ứng đổ bóng -->
    <item android:left="6dp" android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#50000000" /> <!-- Màu đổ bóng -->
            <corners android:radius="16dp" /> <!-- Bán kính bo góc -->
        </shape>
    </item>
    <!-- View chính -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple" /> <!-- Màu nền chính -->
            <corners android:radius="16dp" /> <!-- Bán kính bo góc -->
        </shape>
    </item>
</layer-list>