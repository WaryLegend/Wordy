<!-- circle_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hiệu ứng đổ bóng -->
    <item>
        <shape android:shape="oval" android:left="6dp" android:top="6dp">
            <solid android:color="#50000000" /> <!-- Màu đổ bóng -->
        </shape>
    </item>
    <!-- Vòng tròn không màu nền -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- Không màu nền -->
        </shape>
    </item>
</layer-list>