<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/btnCreateRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo phòng mới" />
    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên của bạn"
        />
    <EditText
        android:id="@+id/edtJoinCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã phòng" />


    <Button
        android:id="@+id/btnJoinRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tham gia phòng" />

    <TextView
        android:id="@+id/tvRoomCode"
        android:text="Room Code:"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ListView
        android:id="@+id/lvPlayerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bắt đầu chơi (host)"
        android:layout_marginTop="20dp" />
</LinearLayout>
